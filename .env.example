# GOAT E-Commerce Environment Variables

# Application
VITE_APP_NAME=GOAT
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Greatest Of All Time E-Commerce"

# API Configuration (for future backend integration)
# VITE_API_BASE_URL=http://localhost:3001/api
# VITE_API_TIMEOUT=10000

# Authentication (for future OAuth integration)
# VITE_GOOGLE_CLIENT_ID=your_google_client_id
# VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Payment Integration (for future implementation)
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Analytics (for future implementation)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX
# VITE_HOTJAR_ID=your_hotjar_id

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_GUEST_CHECKOUT=true
VITE_ENABLE_WISHLIST=false
VITE_ENABLE_REVIEWS=false

# Development
VITE_DEBUG_MODE=true
VITE_SHOW_REDUX_DEVTOOLS=true